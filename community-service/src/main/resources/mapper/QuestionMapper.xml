<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzu.community.mapper.QuestionMapper">


    <select id="selectQuestion" resultType="question">
        select * from question
        <where>
            <if test="search != null and search != ''">
               title REGEXP #{search}
            </if>
            <if test="tag != null and tag != ''">
                tag regexp #{tag}
            </if>
        </where>
        <if test="sort == null or sort == ''">
            order by gmt_create desc
        </if>
        <if test="sort == 'hot' ">
            order by comment_count desc
        </if>
        limit #{offset},#{size}
    </select>

    <select id="queryOneQuestion" resultType="question">
        select *
        from   question
        <where>
            <if test="id != null and id != 0">
                and id = #{id}
            </if>

        </where>
    </select>
    <insert id="insert">
      insert into question(
				          title,
						  description,
						  gmt_create,
						  gmt_modified,
						  creator,
						  tag,
						  comment_count,
						  view_count)
                  value(
                       #{title},
                       #{description},
                       #{gmtCreate},
                       #{gmtModified},
                       #{creator},
                       #{tag},
                       #{commentCount},
                       #{viewCount}
                  )

    </insert>
    <update id="update">
        update question
        <set>
            title = #{title},
            description=#{description},
            gmt_modified=#{gmtModified}
        </set>
        where id = #{id}
    </update>
    <select id="selectRelated" resultType="question">
        select *
        from   question
        where id != #{id} and tag regexp #{tag}
    </select>
    <update id="updateCommentCount">
        update question
        <set>
            comment_count=comment_count+1
        </set>
        where id = #{id}
    </update>

    <select id="selectMyQuestion" resultType="question">
        select *
        from   question
        where creator = #{id}
        ORDER BY gmt_create DESC limit #{offset},#{size}
    </select>

    <select id="count" resultType="integer" >
        select count(id)
        from   question
        <where>
            <if test="search != null and search != ''">
                 title regexp #{search}
            </if>
            <if test="tag != null and tag != ''">
                 tag regexp #{tag}
            </if>

        </where>
     </select>


    <update id="updateViewCount">
        update question
        <set>
            view_count=view_count+1
        </set>
        where id = #{id}
    </update>
</mapper>